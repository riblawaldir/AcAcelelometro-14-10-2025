<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#1E1E2E"
            android:elevation="8dp"
            android:radius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/rocketImage"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/cohete"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mision_gravedad"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#00D9FF"
                    android:letterSpacing="0.1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/detector_de_acelerometro"
                    android:textSize="14sp"
                    android:textColor="#A0A0B0"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#1E1E2E"
            android:elevation="6dp"
            android:radius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/coordenadas"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#00D9FF"
                    android:layout_marginBottom="16dp" />

                <!-- Coordenadas Acelerómetro -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/xcoor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="X: 0.00"
                        android:textColor="#FF6B6B"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:fontFamily="monospace"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/ycoor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Y: 0.00"
                        android:textColor="#51CF66"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:fontFamily="monospace"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/zcoor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Z: 0.00"
                        android:textColor="#4DABF7"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:fontFamily="monospace" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#1E1E2E"
            android:elevation="6dp"
            android:radius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/estado_del_sensor"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFD93D"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/estado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/iniciando"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    android:textColor="#E0E0E0"
                    android:gravity="center"
                    android:padding="12dp"
                    android:background="@drawable/estado_background" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#1E1E2E"
            android:elevation="6dp"
            android:radius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/precision"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#A78BFA"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/precision"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/calculando"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:padding="12dp"
                    android:background="@drawable/precision_background"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="#1E1E2E"
            android:elevation="8dp"
            android:radius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/acelerometro"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sensor Acelerómetro"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#00D9FF" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/acel_x"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="X: 0.00"
                        android:textColor="#FF6B6B"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:fontFamily="monospace"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/acel_y"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Y: 0.00"
                        android:textColor="#51CF66"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:fontFamily="monospace"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/acel_z"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Z: 0.00"
                        android:textColor="#4DABF7"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:fontFamily="monospace" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="#1E1E2E"
            android:elevation="8dp"
            android:radius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/giroscopio"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sensor Giroscopio"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#FFD93D" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/gyro_x"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="X: 0.00"
                        android:textColor="#FF6B6B"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/gyro_y"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Y: 0.00"
                        android:textColor="#51CF66"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/gyro_z"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Z: 0.00"
                        android:textColor="#4DABF7"
                        android:textStyle="bold"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="48dp"
            android:backgroundTint="#1E1E2E"
            android:elevation="8dp"
            android:radius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/magnetometro"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sensor Magnetómetro"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#4DABF7" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/magnet_x"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="X: 0.00"
                        android:textColor="#FF6B6B"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/magnet_y"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Y: 0.00"
                        android:textColor="#51CF66"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/magnet_z"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Z: 0.00"
                        android:textColor="#4DABF7"
                        android:textStyle="bold"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
